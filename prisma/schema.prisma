generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                  String @id @default(uuid())
  ordererId           String @map("orderer_id")
  ordererName         String @map("orderer_name")
  shippingMessage     String @map("shipping_message")
  shippingAddress1    String @map("shipping_address1")
  shippingAddress2    String @map("shipping_address2")
  shippingZipCode     String @map("shipping_zip_code")
  receiverName        String @map("receiver_name")
  receiverPhoneNumber String @map("receiver_phone_number")
}
